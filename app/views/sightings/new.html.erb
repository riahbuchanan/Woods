<h1>Sightings</h1>

<div class="forms">

<%= form_for @sighting do |f| %>

   <%= f.label :email %>  <br>
  <%= f.email_field :email, :size => 30  %>
  <br><br>

   <%= f.label :date %>  <br>
  <%= f.date_field :date %>
  <br><br>

     <%= f.label :time %>  <br>
  <%= f.time_field :time %>
  <br><br>


  <%= f.label :title %> <br>
  <%= f.text_field :title, :size => 30 %>
  <br><br>

 
<%= f.label "Location" %> <br>
  <%= collection_select(:name, :location_id, Location.all, :id, :name, {:include_blank => 'Please select nearest'}) %>
  <br><br>

  <%= f.label "Description"  %> <br>
  <%= f.text_area :description, :placeholder => "Please describe what you saw. Include sightings of actual lions, possible lions or bobcats and/or evidence through paw prints or kills. Let us know if you'd like us to evaluate whether it is a lion.", :cols => 30, :rows => 10 %>
  <br>
  <br>
<!--  -->

<!-- 
  <%= f.label :images %>
  <%= f.file_field :images %>
  <br><br> -->

  <%= f.submit 'Report Sighting' %>

<% end %>

</div>